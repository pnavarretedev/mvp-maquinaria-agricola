<section id="contacto" class="py-20 px-4 sm:px-6 lg:px-8 bg-white dark:bg-background-dark">
  <div class="max-w-4xl mx-auto">
    <!-- Encabezado -->
    <div class="text-center mb-16 fade-in" style="animation-delay: 0.1s">
      <span class="text-secondary text-sm font-bold uppercase tracking-wide">Próximo paso</span>
      <h2 class="text-3xl md:text-4xl font-black text-black dark:text-white mt-2 mb-4 slide-up" style="animation-delay: 0.2s">
        Cotiza tu proyecto hoy
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 slide-up" style="animation-delay: 0.3s">
        Responderemos en menos de 24 horas con una propuesta personalizada.
      </p>
    </div>

    <!-- Formulario -->
    <form class="bg-gray-50 dark:bg-gray-900 rounded-xl p-8 md:p-12 border-2 border-gray-200 dark:border-gray-800 max-w-2xl mx-auto scale-in hover:shadow-xl transition-all duration-300" style="animation-delay: 0.4s">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6 fade-in" style="animation-delay: 0.5s">
        <!-- Nombre -->
        <div>
          <label class="block text-sm font-bold text-black dark:text-white mb-2">Nombre *</label>
          <input 
            type="text" 
            placeholder="Tu nombre completo"
            class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-black dark:text-white placeholder-gray-400 focus:outline-none focus:border-primary focus:shadow-lg transition-all duration-300"
            required
          />
        </div>

        <!-- Email -->
        <div>
          <label class="block text-sm font-bold text-black dark:text-white mb-2">Email *</label>
          <input 
            type="email" 
            placeholder="tu@email.com"
            class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-black dark:text-white placeholder-gray-400 focus:outline-none focus:border-primary focus:shadow-lg transition-all duration-300"
            required
          />
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6 fade-in" style="animation-delay: 0.6s">
        <!-- Teléfono -->
        <div>
          <label class="block text-sm font-bold text-black dark:text-white mb-2">Teléfono *</label>
          <input 
            type="tel" 
            placeholder="+56 9 XXXX XXXX"
            class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-black dark:text-white placeholder-gray-400 focus:outline-none focus:border-primary focus:shadow-lg transition-all duration-300"
            required
          />
        </div>

        <!-- Región -->
        <div>
          <label class="block text-sm font-bold text-black dark:text-white mb-2">Región *</label>
          <select class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-black dark:text-white focus:outline-none focus:border-primary focus:shadow-lg transition-all duration-300">
            <option>Selecciona tu región</option>
            <option>Metropolitana</option>
            <option>O'Higgins</option>
            <option>Maule</option>
            <option>Ñuble</option>
            <option>Otra región</option>
          </select>
        </div>
      </div>

      <!-- Tipo de cultivo -->
      <div class="mb-6 fade-in" style="animation-delay: 0.7s">
        <label class="block text-sm font-bold text-black dark:text-white mb-2">Tipo de cultivo *</label>
        <select class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-black dark:text-white focus:outline-none focus:border-primary focus:shadow-lg transition-all duration-300">
          <option>Selecciona tu cultivo</option>
          <option>Cerezas</option>
          <option>Carozos (Duraznos, Damascos)</option>
          <option>Pomáceas (Manzanas, Peras)</option>
          <option>Viñedos</option>
          <option>Otro</option>
        </select>
      </div>

      <!-- Mensaje -->
      <div class="mb-8 fade-in" style="animation-delay: 0.8s">
        <label class="block text-sm font-bold text-black dark:text-white mb-2">Cuéntanos tu necesidad *</label>
        <textarea 
          placeholder="¿Qué maquinaria necesitas? ¿Cuándo la necesitas? ¿Por cuánto tiempo?"
          rows="4"
          class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-black dark:text-white placeholder-gray-400 focus:outline-none focus:border-primary focus:shadow-lg transition-all duration-300 resize-none"
          required
        ></textarea>
      </div>

      <!-- Botón de envío -->
      <button 
        type="submit"
        class="w-full px-6 py-4 bg-primary text-black font-bold rounded-lg hover:opacity-90 hover:shadow-xl hover:scale-105 transition-all duration-300 text-lg scale-in"
        style="animation-delay: 0.9s"
      >
        Solicitar cotización →
      </button>

      <p class="text-xs text-gray-500 dark:text-gray-400 mt-4 text-center fade-in" style="animation-delay: 1s">
        Al enviar este formulario aceptas que contactemos para darte seguimiento.
      </p>
    </form>

    <!-- Info adicional -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16 text-center">
      <div class="scale-in" style="animation-delay: 1s">
        <span class="material-symbols-outlined text-4xl text-primary">phone</span>
        <h3 class="text-lg font-bold text-black dark:text-white mt-4 mb-2">Teléfono</h3>
        <p class="text-gray-600 dark:text-gray-400">+56 9 XXXX XXXX</p>
      </div>
      <div class="scale-in" style="animation-delay: 1.1s">
        <span class="material-symbols-outlined text-4xl text-secondary">mail</span>
        <h3 class="text-lg font-bold text-black dark:text-white mt-4 mb-2">Email</h3>
        <p class="text-gray-600 dark:text-gray-400">contacto@maquinaria.cl</p>
      </div>
      <div class="scale-in" style="animation-delay: 1.2s">
        <span class="material-symbols-outlined text-4xl text-accent">location_on</span>
        <h3 class="text-lg font-bold text-black dark:text-white mt-4 mb-2">Ubicación</h3>
        <p class="text-gray-600 dark:text-gray-400">Sexta y Séptima Región, Chile</p>
      </div>
    </div>
  </div>
</section>
